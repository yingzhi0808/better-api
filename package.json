{
  "name": "better-api",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@10.14.0",
  "description": "A modern TypeScript-first OpenAPI document generator that analyzes your code and JSDoc comments to automatically generate comprehensive and accurate API documentation.",
  "author": "Yingzhi Ji <jiyingzhi0808@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/yingzhi0808/better-api",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yingzhi0808/better-api.git"
  },
  "bugs": {
    "url": "https://github.com/yingzhi0808/better-api/issues"
  },
  "keywords": [],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "engines": {
    "node": ">=18.19.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "node --watch --enable-source-maps --import @oxc-node/core/register examples/server.ts",
    "build": "tsdown",
    "test": "vitest run --no-isolate --pool=threads",
    "test:watch": "vitest --no-isolate --pool=threads",
    "test:coverage": "vitest run --coverage --no-isolate --pool=threads",
    "docs:dev": "pnpm docs:api && vitepress dev docs",
    "docs:build": "pnpm docs:api && vitepress build docs",
    "docs:api": "typedoc",
    "check": "run-p check:*",
    "check:type": "tsc",
    "check:biome": "biome check --fix --no-errors-on-unmatched",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.0",
    "hono": "^4.9.2",
    "swagger-ui-dist": "^5.27.1",
    "zod": "^4.0.17",
    "zod-openapi": "^5.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@oxc-node/core": "^0.0.32",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "lefthook": "^1.12.3",
    "npm-run-all2": "^8.0.4",
    "tsdown": "^0.14.1",
    "typedoc": "^0.28.10",
    "typedoc-plugin-markdown": "^4.8.1",
    "typedoc-vitepress-theme": "^1.1.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitepress": "2.0.0-alpha.5",
    "vitest": "^3.2.4",
    "vue": "^3.5.18"
  }
}
